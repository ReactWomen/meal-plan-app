{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      //  error  JSX not allowed in files with extension '.js'
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/prefer-default-export": "off",
      "no-console": "off",
      "react/jsx-props-no-spreading": [
        "off"
      ],
      "no-param-reassign": [
        2,
        {
          "props": false
        }
      ]
    }
}
